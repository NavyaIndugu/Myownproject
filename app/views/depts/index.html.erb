<center >
<h1 bgcolor='#dddddd'>DEPARTMENTS LIST</h1>
<%= link_to "Enter new department",new_dept_path %>
<br>
<table border="5" border = black bgcolor='#dddddd'>
<thead>
<th>NAME</th>
<th>STUDENTS</th>
<th>STAFF</th>
<th>BOOKS</th>
</thead>
<% @depts.each do |dept| %>
<tr>
<td><%= dept.name %> </td>
<td><%= dept.students %></td>
<td><%= dept.staff %></td>
<td><%= dept.books %></td>
<td>
<td><%= link_to "Edit", edit_dept_path(dept) %></td>
<td><%= link_to "delete", dept_path(dept), method: :delete, data: { confirm: "are u sure"} %></td>
<td><%= link_to "show", dept_path(dept) %></td>
<td><%= link_to "download pdf", download_pdf_dept_path(dept) %></td>
</td>
</tr>
<% end %>
</table>
<br>
<div>
<%= form_with url: depts_path, method: 'get' do |f| %>
Search:
<%= f.text_field :q, value: params[:q],placeholder:'Search department by name' %>
<%= f.submit "search" %>
<% end %>
<%= link_to "main page", depts_path %>
<br>
<%= nav_bar static: :bottom, brand: "Hogwarts University" do %>
    <%= menu_group do %>
        <%= menu_item "Home", root_path %>
        <%= menu_item "About Us", depts_aboutus_path %>
        <%= menu_item "Contact", depts_contact_path %>
    <% end %>
    <% end %>
</div>
</center>