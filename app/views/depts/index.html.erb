<%= render 'nav' %>
<center >
<h1 bgcolor='#dddddd'>DEPARTMENTS LIST</h1>
<br>
<table style="width:90%", border="5">
<thead>
<h1><th style="width:30%" >NAME</th></h1>
<th>STUDENTS</th>
<th>STAFF</th>
<th>BOOKS</th>
</thead>
<% @depts.each do |dept| %>
<tr>
<td><%= dept.name %> </td>
<td><%= dept.students %></td>
<td><%= dept.staff %></td>
<td><%= dept.books %></td>
<td>
<td><%= link_to "Edit", edit_dept_path(dept) %></td>
<td><%= link_to "delete", dept_path(dept), method: :delete, data: { confirm: "are u sure"} %></td>
<td><%= link_to "show", dept_path(dept) %></td>
<td><%= link_to "download pdf", download_pdf_dept_path(dept) %></td>
</td>
</tr>
<% end %>
</table>
<br>
<div>
<%= form_with url: depts_path, method: 'get' do |f| %>
Search:
<%= f.text_field :q, value: params[:q],placeholder:'Search department by name' %>
<%= f.submit "search" %>
<% end %>
<br>
<h3><%= link_to "main page", root_path %></h3>
<br>
<h3>
<%= link_to '<button type="button">Enter new department</button>'.html_safe, new_dept_path %>

</h3>
<br>

<br>

</div>
<br>
<br>
<br>
</center>